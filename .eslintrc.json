{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "globals": {
    "__DEV__": true,
    "console": true
  },

  "rules": {
    "strict": [0],
    "no-console": [0],

    "react/prop-types": [0]
  }
}
